@using MvcCv.Models.Entity;
@model List<TblHobby>


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Adminlayout.cshtml";
}
<br />
<h3 class="card-title">Hobi Düzenleme</h3>
<br />
<br />
<form method="post">
    @foreach (var item in Model)
    {
        <label>Başlık</label>
        <textarea rows="1" class="form-control" name="Description1">@item.Description1</textarea>
        <label>Açıklama</label>
        <textarea rows="5" class="form-control" name="Description2">@item.Description2</textarea>
    }
    <br />
    <button class="btn btn-success">Güncelle</button>
</form>
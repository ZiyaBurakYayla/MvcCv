@using MvcCv.Models.Entity;
@model List<TblCertificate>

@{
    string Color = "";
}

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Adminlayout.cshtml";
}

<!DOCTYPE html>
<html>
<br />
<h3 class="card-title">Sertifika Listesi</h3>
<br />
<br />
<a href="/Certificate/AddCertificate" class="btn btn-info">Yeni Sertifika Ekle</a>
<br />
<br />
<body class="hold-transition sidebar-mini">
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <!-- /.col -->
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header p-2">

                        </div><!-- /.card-header -->
                        <div class="card-body">

                            <div class="tab-pane" id="timeline">
                                <!-- The timeline -->
                                <div class="timeline timeline-inverse">
                                    <!-- timeline time label -->
                                    @foreach (var item in Model)
                                    {
                                        if (item.Id % 2 == 0)
                                        {
                                            Color = "success";
                                        }
                                        else
                                        {
                                            Color = "warning";
                                        }
                                        <div class="time-label">
                                            <a href="/Certificate/GetCertificate/@item.Id" class="btn btn-@Color">
                                                <span class="bg-@Color">
                                                    @item.Date
                                                </span>
                                            </a>
                                        </div>
                                        <div>
                                            @*<i class="fas fa-comment bg-primary"></i>*@

                                            <div class="timeline-item">
                                                <div class="timeline-body">
                                                    @item.Description
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>
</html>

@using MvcCv.Models.Entity;
@model List<TblCommunication>


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Adminlayout.cshtml";
}

@{
    string Color = "";
}

<!DOCTYPE html>
<html>
<br />
<h3>İletişim</h3>
<h3 class="card-title">Gelen Kutusu</h3>
<br />
<br />
<body class="hold-transition sidebar-mini">
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <!-- /.col -->
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header p-2">

                        </div><!-- /.card-header -->
                        <div class="card-body">

                            <div class="tab-pane" id="timeline">
                                <!-- The timeline -->
                                <div class="timeline timeline-inverse">
                                    <!-- timeline time label -->
                                    @foreach (var item in Model)
                                    {
                                        if (item.Id % 2 == 0)
                                        {
                                            Color = "success";
                                        }
                                        else
                                        {
                                            Color = "warning";
                                        }
                                        <div class="time-label">
                                            <span class="bg-@Color">
                                                @item.Subject - @(((DateTime)item.Date).ToString("dd-MMM-yyyy"))
                                            </span>
                                        </div>
                                        <div>
                                            <i class="fas fa-comment bg-primary"></i>
                                            <div class="timeline-item">
                                                <div class="timeline-body">
                                                    @item.Message
                                                </div>
                                                <div class="timeline-body">
                                                    @item.Mail - @item.NameSurname
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>
</html>


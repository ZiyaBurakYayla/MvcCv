@using MvcCv.Models.Entity;
@model IEnumerable<TblExperience>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Adminlayout.cshtml";
}
<br />
<h3 class="card-title">Deneyim Listesi</h3>
<br />
<br />
<a href="/Experience/AddExperience" class="btn btn-info">Yeni Deneyim Ekle</a>
<br />
<br />
<table class="table table-bordered">
    <tr>
        <th>Id</th>
        <th>Başlık</th>
        <th>Alt Başlık</th>
        <th>Açıklama</th>
        <th>Tarih</th>
        <th>Sil</th>
        <th>Düzenle</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Title</td>
            <td>@item.Subheading</td>
            <td>@item.Description</td>
            <td>@item.Date</td>
            <td><a href="/Experience/DeleteExperience/@item.Id" class="btn btn-danger">Sil</a></td>
            <td><a href="/Experience/GetExperience/@item.Id" class="btn btn-warning">Düzenle</a></td>
        </tr>

    }
</table>
<br />




